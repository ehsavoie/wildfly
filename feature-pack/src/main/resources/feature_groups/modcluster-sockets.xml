<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="modcluster-sockets" xmlns="urn:wildfly:pm-feature-group:1.0">
    <feature-pack dependency="org.wildfly.core:wildfly-core-feature-pack-new">
        <feature spec="socket-binding">
            <param name="socket-binding" value="modcluster"/>
            <param name="multicast-address" value="${jboss.modcluster.multicast.address:224.0.1.105}"/>
            <param name="multicast-port" value="23364"/>
            <param name="port" value="0"/>
        </feature>
    </feature-pack>
</feature-group-spec>
