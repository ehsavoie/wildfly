<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="domain-infinispan-local" xmlns="urn:wildfly:pm-feature-group:1.0">
    <feature spec="profile.subsystem.infinispan">

        <feature spec="profile.subsystem.infinispan.cache-container">
            <param name="cache-container" value="web"/>
            <param name="module" value="org.wildfly.clustering.web.infinispan"/>
            <param name="default-cache" value="passivation"/>
            <feature spec="profile.subsystem.infinispan.cache-container.local-cache">
                <param name="local-cache" value="passivation"/>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.component.locking">
                    <param name="isolation" value="REPEATABLE_READ"/>
                </feature>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.component.transaction">
                    <param name="mode" value="BATCH"/>
                </feature>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.store.file">
                    <param name="passivation" value="true"/>
                    <param name="purge" value="false"/>
                    <unset param="relative-to"/>
                </feature>
            </feature>
        </feature>

        <feature spec="profile.subsystem.infinispan.cache-container">
            <param name="cache-container" value="hibernate"/>
            <param name="module" value="org.hibernate.infinispan"/>
            <feature spec="profile.subsystem.infinispan.cache-container.local-cache">
                <param name="local-cache" value="local-query"/>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.component.eviction">
                    <param name="strategy" value="LRU"/>
                    <param name="max-entries" value="10000"/>
                </feature>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.component.expiration">
                    <param name="max-idle" value="100000"/>
                </feature>
            </feature>
            <feature spec="profile.subsystem.infinispan.cache-container.local-cache">
                <param name="local-cache" value="timestamps"/>
            </feature>
            <feature spec="profile.subsystem.infinispan.cache-container.local-cache">
                <param name="local-cache" value="entity"/>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.component.transaction">
                    <param name="mode" value="NON_XA"/>
                </feature>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.component.eviction">
                    <param name="strategy" value="LRU"/>
                     <param name="max-entries" value="10000"/>
                </feature>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.component.expiration">
                    <param name="max-idle" value="100000"/>
                </feature>
            </feature>
        </feature>

        <feature spec="profile.subsystem.infinispan.cache-container">
            <param name="cache-container" value="ejb"/>
            <param name="module" value="org.wildfly.clustering.ejb.infinispan"/>
            <param name="aliases" value="[sfsb]"/>
            <param name="default-cache" value="passivation"/>
            <feature spec="profile.subsystem.infinispan.cache-container.local-cache">
                <param name="local-cache" value="passivation"/>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.component.locking">
                    <param name="isolation" value="REPEATABLE_READ"/>
                </feature>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.component.transaction">
                    <param name="mode" value="BATCH"/>
                </feature>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.store.file">
                    <param name="passivation" value="true"/>
                    <param name="purge" value="false"/>
                    <unset param="relative-to"/>
                </feature>
            </feature>
        </feature>

        <feature spec="profile.subsystem.infinispan.cache-container">
            <param name="cache-container" value="server"/>
            <param name="module" value="org.wildfly.clustering.server"/>
            <param name="default-cache" value="default"/>
            <feature spec="profile.subsystem.infinispan.cache-container.local-cache">
                <param name="local-cache" value="default"/>
                <feature spec="profile.subsystem.infinispan.cache-container.local-cache.component.transaction">
                    <param name="mode" value="BATCH"/>
                </feature>
            </feature>
        </feature>

    </feature>
</feature-group-spec>
