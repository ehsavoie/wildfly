<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="domain-profile" xmlns="urn:wildfly:pm-feature-group:1.0">

    <feature-pack dependency="org.wildfly.core:wildfly-core-feature-pack-new">
        <feature-group name="security-manager"/>
    </feature-pack>

    <feature-pack dependency="org.wildfly:wildfly-servlet-feature-pack-new">
        <feature-group name="domain-profile">
            <feature-pack dependency="org.wildfly.core:wildfly-core-feature-pack-new">
                <exclude spec="jmx-remoting-connector"/>
            </feature-pack>
        </feature-group>
    </feature-pack>

    <feature-group name="basic-profile"/>

</feature-group-spec>
