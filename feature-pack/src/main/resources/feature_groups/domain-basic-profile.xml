<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="domain-basic-profile" xmlns="urn:wildfly:pm-feature-group:1.0">

    <feature-group name="domain-remoting">
        <feature spec="profile.subsystem.remoting">
            <feature spec="profile.subsystem.remoting.configuration.endpoint">
                <unset param="worker"/>
            </feature>
        </feature>
    </feature-group>

    <origin name="org.wildfly:wildfly-servlet-feature-pack-new">
        <feature-group name="domain-basic-profile"/>
    </origin>

    <feature spec="profile.subsystem.security.security-domain">
        <param name="security-domain" value="other"/>
        <param name="cache-type" value="default"/>
    </feature>

    <feature spec="profile.subsystem.security.security-domain">
        <param name="security-domain" value="jboss-ejb-policy"/>
        <param name="cache-type" value="default"/>
        <feature spec="profile.subsystem.security.security-domain.authorization.classic">
            <feature spec="profile.subsystem.security.security-domain.authorization.classic.policy-module">
                <param name="policy-module" value="Delegating"/>
                <param name="code" value="Delegating"/>
                <param name="flag" value="required"/>
            </feature>
        </feature>
    </feature>
    <feature spec="profile.subsystem.security.security-domain">
        <param name="security-domain" value="jboss-web-policy"/>
        <param name="cache-type" value="default"/>
        <feature spec="profile.subsystem.security.security-domain.authorization.classic">
            <feature spec="profile.subsystem.security.security-domain.authorization.classic.policy-module">
                <param name="policy-module" value="Delegating"/>
                <param name="code" value="Delegating"/>
                <param name="flag" value="required"/>
            </feature>
        </feature>
    </feature>
    <feature spec="profile.subsystem.security.security-domain">
        <param name="cache-type" value="default"/>
        <param name="security-domain" value="jaspitest"/>
        <feature spec="profile.subsystem.security.security-domain.authentication.jaspi">
            <feature spec="profile.subsystem.security.security-domain.authentication.jaspi.auth-module">
                <param name="auth-module" value="Dummy"/>
                <param name="code" value="Dummy"/>
            </feature>
            <feature spec="profile.subsystem.security.security-domain.authentication.jaspi.login-module-stack">
                <param name="login-module-stack" value="dummy"/>
                <feature spec="profile.subsystem.security.security-domain.authentication.jaspi.login-module-stack.login-module">
                    <param name="login-module" value="Dummy"/>
                    <param name="code" value="Dummy"/>
                    <param name="flag" value="optional"/>
                </feature>
            </feature>
        </feature>
    </feature>

    <feature spec="profile.subsystem.ee">
        <feature spec="profile.subsystem.ee.context-service">
            <param name="context-service" value="default"/>
            <param name="use-transaction-setup-provider" value="true"/>
        </feature>
    </feature>

    <feature spec="profile.subsystem.naming">
        <feature spec="profile.subsystem.naming.service.remote-naming"/>
    </feature>

    <feature-group name="domain-batch-jberet"/>
    <feature spec="profile.subsystem.bean-validation"/>
    <feature-group name="domain-datasources"/>
    <feature-group name="domain-ejb3"/>
    <feature spec="profile.subsystem.resource-adapters"/>
    <feature-group name="domain-transactions"/>
    <feature-group name="domain-jca"/>
    <feature-group name="domain-jpa"/>
    <feature spec="profile.subsystem.jsf"/>
    <feature spec="profile.subsystem.jaxrs"/>
    <feature spec="profile.subsystem.jdr"/>
    <feature spec="profile.subsystem.pojo"/>
    <feature spec="profile.subsystem.sar"/>
    <feature-group name="domain-mail"/>
    <feature-group name="domain-webservices"/>
    <feature spec="profile.subsystem.weld"/>
</feature-group-spec>
