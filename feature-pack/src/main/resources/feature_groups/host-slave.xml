<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="host-slave" xmlns="urn:wildfly:pm-feature-group:1.0">
    <origin name="org.wildfly:wildfly-servlet-feature-pack-new">
        <feature-group name="host-slave">
            <exclude feature-id="host.interface:interface=unsecure"/>
            <exclude feature-id="host.interface:interface=private"/>
        </feature-group>
    </origin>
    <feature spec="host">
        <param name="host" value="slave"/>
        <feature spec="host.jvm">
            <param name="jvm" value="default"/>
            <param name="jvm-options" value="[&quot;--add-exports=java.base/sun.nio.ch=ALL-UNNAMED&quot;]"/>
        </feature>
    </feature>
</feature-group-spec>
