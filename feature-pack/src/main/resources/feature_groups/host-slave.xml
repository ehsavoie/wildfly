<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="host-slave" xmlns="urn:wildfly:pm-feature-group:1.0">
    <feature-pack dependency="servlet">
        <feature-group name="host-slave">
             <feature-pack dependency="core">
                <exclude feature-id="interface:interface=unsecure"/>
                <exclude feature-id="interface:interface=private"/>
            </feature-pack>
        </feature-group>
    </feature-pack>
     <feature-pack dependency="core">
        <feature spec="host">
            <param name="host" value="slave"/>
            <feature spec="jvm">
                <feature spec="jvm-option">
                    <param name="jvm-option" value="&quot;--add-exports=java.base/sun.nio.ch=ALL-UNNAMED&quot;"/>
                </feature>
            </feature>
        </feature>
    </feature-pack>
</feature-group-spec>
