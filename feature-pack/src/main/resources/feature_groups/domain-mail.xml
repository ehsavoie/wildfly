<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="domain-mail" xmlns="urn:wildfly:pm-feature-group:1.0">
    <feature spec="profile.subsystem.elytron">
        <feature spec="profile.subsystem.elytron.simple-permission-mapper">
            <param name="simple-permission-mapper" value="default-permission-mapper" />
            <feature spec="profile.subsystem.elytron.simple-permission-mapper_permission-mappings">
                <param name="permission-mapping" value="{class-name=org.wildfly.transaction.client.RemoteTransactionPermission,module=org.wildfly.transaction.client}"/>
            </feature>
        </feature>
    </feature>
    <feature spec="profile.subsystem.mail">
        <feature spec="profile.subsystem.mail.mail-session">
            <param name="mail-session" value="default"/>
            <param name="jndi-name" value="java:jboss/mail/Default"/>
            <feature spec="profile.subsystem.mail.mail-session.server.smtp">
                <param name="outbound-socket-binding-ref" value="mail-smtp"/>
            </feature>
        </feature>
    </feature>
</feature-group-spec>
