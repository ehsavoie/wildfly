<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="domain" xmlns="urn:wildfly:pm-feature-group:1.0">

    <feature-pack dependency="org.wildfly:wildfly-servlet-feature-pack-new">
        <feature-group name="domain-interfaces"/>
    </feature-pack>

    <feature-pack dependency="org.wildfly.core:wildfly-core-feature-pack-new">
        <feature spec="socket-binding-group">
            <param name="socket-binding-group" value="standard-sockets"/>
            <feature-pack dependency="this">
                <feature-group name="domain-sockets"/>
            </feature-pack>
        </feature>

        <feature spec="profile">
            <param name="profile" value="default"/>

            <feature-pack dependency="this">
                <feature-group name="domain-profile"/>
                <feature-group name="infinispan-local"/>
            </feature-pack>
        </feature>

        <feature spec="system-property">
            <param name="system-property" value="java.net.preferIPv4Stack"/>
            <param name="value" value="true"/>
        </feature>
        <feature-group name="access-control"/>
        <feature-group name="domain-host-excludes"/>
    </feature-pack>

</feature-group-spec>
