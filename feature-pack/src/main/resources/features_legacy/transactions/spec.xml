<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="transactions" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem"/>
    <elem name="op-params" value="process-id-uuid,socket-binding,status-socket-binding,object-store-relative-to,object-store-path"/>
  </annotation>
  <refs>
    <ref dependency="core" feature="extension" include="true"/>
    <ref name="profile" dependency="core" feature="profile" include="true" nillable="true"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" default="transactions" feature-id="true"/>
    <param name="extension" default="org.jboss.as.transactions"/>
    <param name="process-id-uuid" default="true"/>
    <param name="socket-binding" default="txn-recovery-environment"/>
    <param name="status-socket-binding" default="txn-status-manager"/>
    <param name="object-store-relative-to" default="jboss.server.data.dir"/>
    <param name="object-store-path" default="tx-object-store"/>
  </params>
  <packages>
    <package name="org.jboss.as.transactions.main"/>
  </packages>
</feature-spec>
