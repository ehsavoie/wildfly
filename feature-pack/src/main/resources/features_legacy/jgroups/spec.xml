<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="jgroups" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem"/>
    <elem name="op-params" value="default-channel,default-stack"/>
  </annotation>
  <provides>
    <capability name="$profile.org.wildfly.clustering.default-command-dispatcher-factory"/>
    <capability name="$profile.org.wildfly.clustering.default-group"/>
    <capability name="$profile.org.wildfly.clustering.default-node-factory"/>
    <capability name="$profile.org.wildfly.clustering.jgroups.default-channel"/>
    <capability name="$profile.org.wildfly.clustering.jgroups.default-channel-cluster"/>
    <capability name="$profile.org.wildfly.clustering.jgroups.default-channel-factory"/>
    <capability name="$profile.org.wildfly.clustering.jgroups.default-channel-source"/>
    <capability name="$profile.org.wildfly.clustering.jgroups.default-channel-module"/>
  </provides>
  <requires>
    <capability name="$profile.org.wildfly.clustering.jgroups.channel-factory.$default-channel"/>
  </requires>
  <refs>
    <ref dependency="core" feature="extension" include="true"/>
    <ref dependency="core" feature="profile" include="true" nillable="true"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" default="jgroups" feature-id="true"/>
    <param name="extension" default="org.jboss.as.clustering.jgroups"/>
    <param name="default-channel" nillable="true"/>
    <param name="default-stack" nillable="true"/>
  </params>
  <packages>
    <package name="org.jboss.as.clustering.jgroups.main"/>
  </packages>
</feature-spec>
