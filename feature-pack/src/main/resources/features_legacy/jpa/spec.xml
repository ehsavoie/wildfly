<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="jpa" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem"/>
    <elem name="op-params" value="default-datasource,default-extended-persistence-inheritance"/>
  </annotation>
  <refs>
    <ref dependency="core" feature="extension" include="true"/>
    <ref name="profile" dependency="core" feature="profile" include="true" nillable="true"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" default="jpa" feature-id="true"/>
    <param name="extension" default="org.jboss.as.jpa"/>
    <param name="default-datasource" default=""/>
    <param name="default-extended-persistence-inheritance" default="DEEP"/>
  </params>
  <packages>
    <package name="org.jboss.as.jpa.main"/>
  </packages>
</feature-spec>
