<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="domain-full-ha" xmlns="urn:wildfly:pm-feature-group:1.0">

    <feature-pack dependency="servlet">
        <feature-group name="domain-interfaces"/>
    </feature-pack>

    <feature-pack dependency="core">
        <feature spec="interface">
            <param name="interface" value="unsecure"/>
            <param name="inet-address" value="${jboss.bind.address.unsecure:127.0.0.1}"/>
        </feature>

        <feature spec="socket-binding-group">
            <param name="socket-binding-group" value="full-ha-sockets"/>
            <feature-pack dependency="this">
                <feature-group name="domain-sockets"/>
                <feature-group name="ha-sockets"/>
                <feature-group name="iiop-sockets"/>
            </feature-pack>
            <feature-group name="domain-server-groups"/>
        </feature>

        <feature spec="profile">
            <param name="profile" value="full-ha"/>

            <feature-pack dependency="this">
                <feature-group name="domain-profile"/>
                <feature-group name="basic-ha-profile"/>
                <feature-group name="jsr77"/>
                <feature-group name="iiop-openjdk"/>
                <feature-group name="messaging-activemq-ha"/>
                <feature spec="ejb3">
                    <feature spec="ejb3-iiop-service"/>
                </feature>
            </feature-pack>
        </feature>

        <feature spec="system-property">
            <param name="system-property" value="java.net.preferIPv4Stack"/>
            <param name="value" value="true"/>
        </feature>
        <feature-group name="access-control"/>
        <feature-group name="domain-host-excludes"/>
    </feature-pack>

</feature-group-spec>