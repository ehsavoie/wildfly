<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="infinispan-cache-container-invalidation-cache-expiration" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,cache-container,invalidation-cache,component"/>
  </annotation>
  <refs>
    <ref feature="infinispan-cache-container-invalidation-cache"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" default="jca" feature-id="true"/>
    <param name="cache-container" feature-id="true"/>
    <param name="invalidation-cache" feature-id="true"/>
    <param name="component" default="expiration" feature-id="true"/>
    <param name="max-idle" default="100000"/>
  </params>
</feature-spec>
