<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="webservices" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem"/>
    <elem name="op-params" value="wsdl-host"/>
  </annotation>
  <refs>
    <ref dependency="core" feature="extension" include="true"/>
    <ref name="profile" dependency="core" feature="profile" include="true" nillable="true"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" default="webservices" feature-id="true"/>
    <param name="extension" default="org.jboss.as.webservices"/>
    <param name="wsdl-host" default="${jboss.bind.address:127.0.0.1}"/>
  </params>
  <packages>
    <package name="org.jboss.as.webservices.main"/>
  </packages>
</feature-spec>
