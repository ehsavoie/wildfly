<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="infinispan-cache-container-local-cache-store" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,cache-container,local-cache,store"/>
  </annotation>
  <provides>
    <capability name="$profile.org.wildfly.clustering.infinispan.cache.store.$store"/>
  </provides>
  <refs>
    <ref feature="infinispan-cache-container-local-cache"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" default="jca" feature-id="true"/>
    <param name="cache-container" feature-id="true"/>
    <param name="local-cache" feature-id="true"/>
    <param name="store" default="file" feature-id="true"/>
    <param name="passivation" default="true"/>
    <param name="purge" default="false"/>
  </params>
</feature-spec>
