<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="bean-validation" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem"/>
    <elem name="op-params"/>
  </annotation>
  <refs>
    <ref dependency="core" feature="extension" include="true"/>
    <ref dependency="core" feature="profile" include="true" nillable="true"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" default="bean-validation" feature-id="true"/>
    <param name="extension" default="org.wildfly.extension.bean-validation"/>
  </params>
  <packages>
    <package name="org.wildfly.extension.bean-validation.main"/>
  </packages>
</feature-spec>
