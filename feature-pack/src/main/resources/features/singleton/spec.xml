<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="singleton" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem"/>
    <elem name="op-params" value="default"/>
  </annotation>
  <provides>
    <capability name="$profile.org.wildfly.clustering.singleton.default-policy"/>
  </provides>
  <requires>
    <capability name="$profile.org.wildfly.clustering.singleton.policy.$default"/>
  </requires>
  <refs>
    <ref dependency="core" feature="extension" include="true"/>
    <ref dependency="core" feature="profile" include="true" nillable="true"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" default="singleton" feature-id="true"/>
    <param name="extension" default="org.wildfly.extension.clustering.singleton"/>
    <param name="default"/>
  </params>
  <packages>
    <package name="org.wildfly.extension.clustering.singleton.main"/>
  </packages>
</feature-spec>
