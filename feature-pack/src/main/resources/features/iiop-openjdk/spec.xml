<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="iiop-openjdk" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem"/>
    <elem name="op-params" value="socket-binding,security,transactions,server-requires-ssl,client-requires-ssl"/>
  </annotation>
  <requires>
    <capability name="org.wildfly.network.socket-binding.$socket-binding"/>
  </requires>
  <refs>
    <ref dependency="core" feature="extension" include="true"/>
    <ref dependency="core" feature="profile" include="true" nillable="true"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" default="iiop-openjdk" feature-id="true"/>
    <param name="extension" default="org.wildfly.iiop-openjdk"/>
    <param name="socket-binding"/>
    <param name="security"/>
    <param name="transactions" default="spec"/>
    <param name="server-requires-ssl" default="false"/>
    <param name="client-requires-ssl" default="false"/>
  </params>
  <packages>
    <package name="org.wildfly.iiop-openjdk.main"/>
  </packages>
</feature-spec>
