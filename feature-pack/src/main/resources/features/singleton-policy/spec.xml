<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="singleton-policy" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,singleton-policy"/>
    <elem name="op-params" value="cache,cache-container,quorum"/>
  </annotation>
  <provides>
    <capability name="$profile.org.wildfly.clustering.singleton.policy.builder.$singleton-policy"/>
    <capability name="$profile.org.wildfly.clustering.singleton.policy.default-builder.$singleton-policy"/>
    <capability name="$profile.org.wildfly.clustering.singleton.policy.$singleton-policy"/>
  </provides>
  <requires>
    <capability name="$profile.org.wildfly.clustering.cache.singleton-service-builder-factory.$cache" optional="true"/>
    <capability name="$profile.org.wildfly.clustering.cache.default-singleton-service-builder-factory.$cache-container"/>
  </requires>
  <refs>
    <ref feature="singleton"/>
    <ref dependency="core" feature="profile" include="true" nillable="true"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" default="singleton" feature-id="true"/>
    <param name="singleton-policy" feature-id="true"/>
    <param name="cache" nillable="true"/>
    <param name="cache-container"/>
    <param name="quorum" nillable="true"/>
  </params>
</feature-spec>
