<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="infinispan-cache-container-invalidation-cache" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,cache-container,invalidation-cache"/>
  </annotation>
  <provides>
    <capability name="$profile.org.wildfly.clustering.cache.service-provider-registry.$cache-container.$invalidation-cache"/>
    <capability name="$profile.org.wildfly.clustering.cache.registry.$cache-container.$invalidation-cache"/>
    <capability name="$profile.org.wildfly.clustering.infinispan.cache-container.cache.transport.$cache-container.$invalidation-cache"/>
    <capability name="$profile.org.wildfly.clustering.cache.singleton-service-builder-factory.$cache-container.$invalidation-cache"/>
    <capability name="$profile.org.wildfly.clustering.infinispan.cache-configuration.$cache-container.$invalidation-cache"/>
    <capability name="$profile.org.wildfly.clustering.infinispan.cache.$cache-container.$invalidation-cache"/>
    <capability name="$profile.org.wildfly.clustering.cache.node-factory.$cache-container.$invalidation-cache"/>
    <capability name="$profile.org.wildfly.clustering.cache.registry-entry.$cache-container.$invalidation-cache"/>
    <capability name="$profile.org.wildfly.clustering.cache.group.$cache-container.$invalidation-cache"/>
    <capability name="$profile.org.wildfly.clustering.cache.registry-factory.$cache-container.$invalidation-cache"/>
  </provides>
  <requires>
    <capability name="$profile.org.wildfly.clustering.infinispan.transport.channel-factory.$cache-container"/>
  </requires>
  <refs>
    <ref feature="infinispan-cache-container"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="cache-container" feature-id="true"/>
    <param name="invalidation-cache" feature-id="true"/>
    <param name="mode" nillable="true"/>
  </params>
</feature-spec>
