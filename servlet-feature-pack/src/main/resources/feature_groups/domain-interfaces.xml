<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="domain-interfaces" xmlns="urn:wildfly:pm-feature-group:1.0">

    <feature-pack dependency="core">
        <feature-group name="domain-interfaces"/>
        <feature spec="interface">
            <param name="interface" value="private"/>
            <param name="inet-address" value="${jboss.bind.address.private:127.0.0.1}"/>
        </feature>
    </feature-pack>

</feature-group-spec>
