<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="domain-sockets" xmlns="urn:wildfly:pm-feature-group:1.0">

    <feature-pack dependency="org.wildfly.core:wildfly-core-feature-pack-new">
        <feature spec="domain.socket-binding-group.socket-binding">
            <param name="socket-binding" value="ajp"/>
            <param name="port" value="${jboss.ajp.port:8009}"/>
        </feature>
        <feature spec="domain.socket-binding-group.socket-binding">
            <param name="socket-binding" value="http"/>
            <param name="port" value="${jboss.http.port:8080}"/>
        </feature>
        <feature spec="domain.socket-binding-group.socket-binding">
            <param name="socket-binding" value="https"/>
            <param name="port" value="${jboss.https.port:8443}"/>
        </feature>
    </feature-pack>

</feature-group-spec>
