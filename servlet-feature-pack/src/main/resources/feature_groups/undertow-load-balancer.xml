<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="undertow-load-balancer" xmlns="urn:wildfly:pm-feature-group:1.0">
    <feature-group name="undertow-base"/>
    <feature spec="undertow">
        <feature spec="undertow-server">
            <feature spec="undertow-server-http-listener">
                <param name="http-listener" value="management"/>
                <param name="socket-binding" value="mcmp-management"/>
                <param name="enable-http2" value="true"/>
            </feature>
            <feature spec="undertow-server-host">
                <feature spec="undertow-server-host-filter-ref">
                    <param name="filter-ref" value="load-balancer"/>
                </feature>
            </feature>
        </feature>
        <feature spec="undertow-config-filter">
            <feature spec="undertow-config-filter-mod-cluster">
                <param name="mod-cluster" value="load-balancer"/>
                <param name="management-socket-binding" value="mcmp-management"/>
                <param name="advertise-socket-binding" value="modcluster"/>
            </feature>
        </feature>
    </feature>
</feature-group-spec>
