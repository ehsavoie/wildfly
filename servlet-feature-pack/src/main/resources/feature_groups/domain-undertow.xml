<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="domain-undertow" xmlns="urn:wildfly:pm-feature-group:1.0">
    <feature-group name="domain-undertow-base"/>
    <feature spec="profile.subsystem.undertow">
        <param name="default-security-domain" value="other"/>
        <feature spec="profile.subsystem.undertow.configuration.filter">
            <feature spec="profile.subsystem.undertow.configuration.filter.response-header">
                <param name="response-header" value="server-header"/>
                <param name="header-name" value="Server"/>
                <param name="header-value" value="WildFly/11"/>
            </feature>
            <feature spec="profile.subsystem.undertow.configuration.filter.response-header">
                <param name="response-header" value="x-powered-by-header"/>
                <param name="header-name" value="X-Powered-By"/>
                <param name="header-value" value="Undertow/1"/>
            </feature>
        </feature>
        <feature spec="profile.subsystem.undertow.configuration.handler">
            <feature spec="profile.subsystem.undertow.configuration.handler.file">
                <param name="file" value="welcome-content"/>
                <param name="path" value="${jboss.home.dir}/welcome-content"/>
            </feature>
        </feature>
        <feature spec="profile.subsystem.undertow.server">
            <param name="server" value="default-server" />
            <feature spec="profile.subsystem.undertow.server.host">
                <param name="host" value="default-host" />
                <param name="alias" value="[localhost]"/>
                <feature spec="profile.subsystem.undertow.server.host.filter-ref">
                    <param name="filter-ref" value="server-header"/>
                </feature>
                <feature spec="profile.subsystem.undertow.server.host.filter-ref">
                    <param name="filter-ref" value="x-powered-by-header"/>
                </feature>
                <feature spec="profile.subsystem.undertow.server.host.location">
                    <param name="location" value="\/"/>
                    <param name="handler" value="welcome-content"/>
                </feature>
                <feature spec="profile.subsystem.undertow.server.host.setting.http-invoker">
                    <param name="security-realm" value="ApplicationRealm"/>
                </feature>
            </feature>
            <feature spec="profile.subsystem.undertow.server.https-listener">
                <param name="security-realm" value="ApplicationRealm"/>
                <param name="https-listener" value="https"/>
                <param name="enable-http2" value="true"/>
                <param name="socket-binding" value="https"/>
                <unset param="worker"/>
                <unset param="buffer-pool"/>
            </feature>
        </feature>
        <feature spec="profile.subsystem.undertow.servlet-container">
            <param name="servlet-container" value="default" />
            <feature spec="profile.subsystem.undertow.servlet-container.setting.jsp"/>
            <feature spec="profile.subsystem.undertow.servlet-container.setting.websockets">
                <unset param="buffer-pool" />
                <unset param="worker" />
            </feature>
        </feature>
    </feature>
</feature-group-spec>
