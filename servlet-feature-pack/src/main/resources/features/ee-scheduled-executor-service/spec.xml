<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="ee-scheduled-executor-service" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,managed-scheduled-executor-service"/>
  </annotation>
  <refs>
    <ref feature="ee"/>
    <ref feature="ee-context-service"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="managed-scheduled-executor-service" feature-id="true"/>
    <param name="jndi-name"/>
    <param name="context-service"/>
    <param name="hung-task-threshold"/>
    <param name="keepalive-time" nillable="true"/>
  </params>
</feature-spec>
