<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="undertow-server-host-http-invoker" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,server,server-host,setting"/>
    <elem name="addr-params-mapping" value="host,profile,subsystem,server,host,setting"/>
    <elem name="op-params" value="security-realm"/>
  </annotation>
  <refs>
    <ref feature="undertow-server-host"/>
    <!-- <ref dependency="core" feature="security-realm"/> -->
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="server" feature-id="true"/>
    <param name="server-host" feature-id="true"/>
    <param name="setting" default="http-invoker" feature-id="true"/>
    <!--  <param name="core-service" default="management"/> -->
    <param name="security-realm"/>
  </params>
</feature-spec>
