<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="security-domain-authorization" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,security-domain,authorization"/>
  </annotation>
  <refs>
    <ref feature="security-domain"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="security-domain" feature-id="true"/>
    <param name="authorization" default="classic" feature-id="true"/>
  </params>
</feature-spec>
