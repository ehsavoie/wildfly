<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="security-domain" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,security-domain"/>
  </annotation>
  <refs>
    <ref dependency="core" feature="profile" include="true" nillable="true"/>
    <ref feature="security"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="security-domain" feature-id="true"/>
    <param name="cache-type" default="default"/>
  </params>
</feature-spec>
